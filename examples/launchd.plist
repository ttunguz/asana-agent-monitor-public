<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.asana.agent.monitor</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/ruby</string>
        <string>/path/to/asana-agent-monitor/bin/monitor.rb</string>
    </array>
    <key>WorkingDirectory</key>
    <string>/path/to/asana-agent-monitor</string>
    <key>StandardOutPath</key>
    <string>/path/to/asana-agent-monitor/logs/agent.log</string>
    <key>StandardErrorPath</key>
    <string>/path/to/asana-agent-monitor/logs/error.log</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>EnvironmentVariables</key>
    <dict>
        <key>ASANA_API_KEY</key>
        <string>your_key_here</string>
        <key>GEMINI_API_KEY</key>
        <string>your_key_here</string>
    </dict>
</dict>
</plist>
